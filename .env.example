# ===========================================
# AI Customer Intelligence Platform
# Environment Variables Configuration
# ===========================================

# ===========================================
# SUPABASE CONFIGURATION
# ===========================================
# Your Supabase project URL (found in Settings > API)
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co

# Your Supabase anonymous key (found in Settings > API)
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Your Supabase service role key (found in Settings > API)
# WARNING: Keep this secret! Never commit to version control
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# ===========================================
# HUBSPOT INTEGRATION
# ===========================================
# HubSpot Private App access token
# Create at: Settings > Integrations > Private Apps
# Required scopes: crm.objects.contacts.read, crm.objects.deals.read, crm.objects.tickets.read
HUBSPOT_ACCESS_TOKEN=your_hubspot_access_token_here

# ===========================================
# GRAIN INTEGRATION
# ===========================================
# Grain API key (requires Enterprise plan)
# Contact Grain support for API access
GRAIN_API_KEY=your_grain_api_key_here

# ===========================================
# JIRA INTEGRATION
# ===========================================
# JIRA API token (create at: Account Settings > Security > API tokens)
JIRA_API_TOKEN=your_jira_api_token_here

# Your JIRA base URL (e.g., https://yourcompany.atlassian.net)
JIRA_BASE_URL=https://your-company.atlassian.net

# JIRA project key to monitor (e.g., "PRESS")
JIRA_PROJECT_KEY=PRESS

# ===========================================
# SLACK INTEGRATION
# ===========================================
# Slack bot token (create at: api.slack.com > Your Apps > OAuth & Permissions)
# Required scopes: chat:write, channels:read, groups:read
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token-here

# Default Slack channel for notifications (without #)
SLACK_DEFAULT_CHANNEL=product-updates

# ===========================================
# AI PROVIDER CONFIGURATION
# Choose ONE of the following AI providers
# ===========================================

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview

# OR Anthropic Claude Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# ===========================================
# WEBHOOK CONFIGURATION
# ===========================================
# Webhook secret for validating incoming requests (optional but recommended)
WEBHOOK_SECRET=your_webhook_secret_here

# ===========================================
# DEPLOYMENT CONFIGURATION
# ===========================================
# Environment (development, staging, production)
NODE_ENV=development

# Application base URL (used for webhook URLs and redirects)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ===========================================
# ZAPIER INTEGRATION (Alternative to Grain API)
# ===========================================
# If using Zapier webhooks instead of direct Grain API
ZAPIER_WEBHOOK_SECRET=your_zapier_webhook_secret_here

# ===========================================
# FEATURE FLAGS
# ===========================================
# Enable/disable features during development
FEATURE_COMPETITIVE_INTELLIGENCE=true
FEATURE_MARKETING_CONTENT=true
FEATURE_PRODUCT_UPDATES=true
FEATURE_AI_ANALYSIS=true

# ===========================================
# LOGGING & MONITORING
# ===========================================
# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Enable detailed API logging
ENABLE_API_LOGGING=true

# ===========================================
# RATE LIMITING
# ===========================================
# API rate limit per minute (for webhooks)
API_RATE_LIMIT=60

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# Database connection pool settings
DB_POOL_MIN=2
DB_POOL_MAX=10

# ===========================================
# CACHE CONFIGURATION
# ===========================================
# Cache TTL in seconds
CACHE_TTL=3600

# ===========================================
# EMAIL CONFIGURATION (Optional)
# ===========================================
# For sending alerts and notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password_here

# ===========================================
# SECURITY CONFIGURATION
# ===========================================
# JWT secret for internal authentication
JWT_SECRET=your_jwt_secret_here

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,https://your-domain.com

# ===========================================
# DEVELOPMENT TOOLS
# ===========================================
# Enable development tools
ENABLE_DEV_TOOLS=true

# Mock API responses for development
MOCK_API_RESPONSES=false
