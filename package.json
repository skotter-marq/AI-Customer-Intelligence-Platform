{
  "name": "ai-customer-intelligence-platform",
  "version": "1.0.0",
  "description": "AI-powered platform that automatically analyzes customer interactions to extract insights, monitor competition, and automate product communications",
  "main": "app/page.tsx",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "dev:standard": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:integrations": "node tests/integration/test-integrations.js",
    "test:webhooks": "node test-webhook.js",
    "test:live": "node test-live-webhook.js",
    "test:hubspot": "node test-hubspot-integration.js",
    "test:ai": "node test-ai-provider.js",
    "test:analysis": "node test-customer-analysis.js",
    "test:analysis-structure": "node test-analysis-structure.js",
    "test:basic-structure": "node test-basic-structure.js",
    "test:jira": "node test-jira-integration.js",
    "test:competitive-intelligence": "node test-competitive-intelligence.js",
    "test:intelligence-reports": "node test-intelligence-reports.js",
    "test:jira-story-monitor": "node test-jira-story-monitor.js",
    "test:tag-detection-filter": "node test-tag-detection-filter.js",
    "test:content-templates": "node test-content-templates.js",
    "test:content-generation-engine": "node test-content-generation-engine.js",
    "test:template-validator": "node test-template-validator.js",
    "test:content-pipeline-orchestrator": "node test-content-pipeline-orchestrator.js",
    "test:pipeline-monitor": "node test-pipeline-monitor.js",
    "test:tldr-generator": "node test-tldr-generator.js",
    "test:update-content-generator": "node test-update-content-generator.js",
    "test:update-content-validator": "node test-update-content-validator.js",
    "db:setup": "node scripts/setup-database-simple.js",
    "db:setup-product-updates": "node scripts/setup-product-updates.js",
    "db:setup-competitive-intelligence": "node scripts/setup-competitive-intelligence.js",
    "db:setup-marketing-content": "node scripts/setup-marketing-content.js",
    "db:migrate": "node scripts/migrate-database.js",
    "db:seed": "node scripts/seed-database.js",
    "db:reset": "node scripts/reset-database.js",
    "postinstall": "prisma generate || true",
    "analyze": "cross-env ANALYZE=true next build",
    "clean": "rm -rf .next out dist coverage",
    "docker:build": "docker build -t ai-customer-intelligence-platform .",
    "docker:run": "docker run -p 3000:3000 ai-customer-intelligence-platform",
    "docker:compose": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "prod:deploy": "./scripts/deploy.sh",
    "prod:health": "curl -f http://localhost:3000/api/health",
    "prod:monitor": "curl -f http://localhost:3000/api/monitoring?type=metrics",
    "prod:backup": "node scripts/backup.js",
    "security:audit": "npm audit --audit-level=moderate",
    "security:scan": "npm audit --audit-level=high"
  },
  "keywords": [
    "ai",
    "customer-intelligence",
    "hubspot",
    "grain",
    "jira",
    "slack",
    "next.js",
    "supabase",
    "webhook",
    "automation",
    "crm",
    "analytics"
  ],
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/skotter-marq/AI-Customer-Intelligence-Platform.git"
  },
  "bugs": {
    "url": "https://github.com/skotter-marq/AI-Customer-Intelligence-Platform/issues"
  },
  "homepage": "https://github.com/skotter-marq/AI-Customer-Intelligence-Platform#readme",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.9.1",
    "@hubspot/api-client": "^13.0.0",
    "@supabase/supabase-js": "^2.51.0",
    "axios": "^1.6.2",
    "bcryptjs": "^2.4.3",
    "cheerio": "^1.1.0",
    "cors": "^2.8.5",
    "date-fns": "^2.30.0",
    "dotenv": "^17.2.0",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "lucide-react": "^0.525.0",
    "next": "15.4.1",
    "nodemailer": "^6.9.7",
    "openai": "^4.104.0",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@next/bundle-analyzer": "^15.0.0",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^16.0.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/lodash": "^4.14.202",
    "@types/node": "^20",
    "@types/nodemailer": "^6.4.14",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "eslint": "^9",
    "eslint-config-next": "15.4.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.4.32",
    "prettier": "^3.1.0",
    "prettier-plugin-tailwindcss": "^0.5.7",
    "supertest": "^6.3.3",
    "tailwindcss": "^3.4.0",
    "typescript": "^5"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "overrides": {
    "@testing-library/react": {
      "react": "19.1.0",
      "react-dom": "19.1.0",
      "@types/react": "^19"
    }
  },
  "resolutions": {
    "@types/react": "^19",
    "@types/react-dom": "^19"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.js"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/.next/",
      "<rootDir>/node_modules/"
    ],
    "transform": {
      "^.+\\.(js|jsx|ts|tsx)$": [
        "babel-jest",
        {
          "presets": [
            "next/babel"
          ]
        }
      ]
    },
    "moduleNameMapping": {
      "^@/(.*)$": "<rootDir>/$1"
    },
    "collectCoverageFrom": [
      "app/**/*.{js,jsx,ts,tsx}",
      "lib/**/*.{js,jsx,ts,tsx}",
      "!app/**/*.d.ts",
      "!**/node_modules/**",
      "!**/.next/**"
    ]
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 80,
    "tabWidth": 2,
    "plugins": [
      "prettier-plugin-tailwindcss"
    ]
  }
}
